{
  "providers": {
    "anthropic": {
      "name": "anthropic",
      "disabled": true
    },
    "google": {
      "name": "google",
      "disabled": true
    }
  },
  "agents": {
    "manager": {
      "model": "claude-sonnet-4-5",
      "reasoningLevel": "high"
    },
    "coder": {
      "model": "claude-sonnet-4-5",
      "maxTokens": 16384
    },
    "task": {
      "model": "o4-mini",
      "maxTokens": 8192
    }
  },
  "server": {
    "port": 3001,
    "host": "127.0.0.1"
  },
  "dataDirectory": ".koryphaios",
  "contextPaths": [
    ".cursorrules",
    "CLAUDE.md",
    "AGENTS.md",
    ".opencode.json",
    "CONVENTIONS.md"
  ],
  "_workspace": {
    "_comment": "Git worktree isolation for parallel agents (uncomment to enable)",
    "_worktreeLimit_comment": "Max concurrent worktrees. 8GB RAM=3-4, 16GB=6-8, 32GB+=10+",
    "_worktreeLimit": 4,
    "_worktreeDir": ".trees",
    "_copyEnvFiles": false
  }
}